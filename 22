import { createClient } from '@supabase/supabase-js'

const supabaseUrl = import.meta.env.VITE_SUPABASE_URL
const supabaseAnonKey = import.meta.env.VITE_SUPABASE_ANON_KEY

if (!supabaseUrl || !supabaseAnonKey) {
  // This error will be thrown during the build process if the variables are not set.
  // It provides a more explicit message for deployment environments like Netlify.
  throw new Error(
    "Supabase environment variables (VITE_SUPABASE_URL and VITE_SUPABASE_ANON_KEY) are missing. " +
    "If you are deploying to a service like Netlify, please make sure you have added these variables to your site's build environment settings."
  );
}

export const supabase = createClient(supabaseUrl, supabaseAnonKey)
